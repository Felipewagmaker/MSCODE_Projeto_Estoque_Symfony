{% extends 'paginasapp.html.twig' %}

{% block title %}Editar Venda{% endblock %}

{% block body %}
    <h1>Editar Venda</h1>

    <form method="post">
        <div class="form-group">
            <label for="produto">Produto:</label>
            <input type="text" id="produto" class="form-control" value="{{ venda.produto.nome }}" disabled>
        </div>

        <div class="form-group">
            <label for="quantidade">Quantidade:</label>
            <input type="number" id="quantidade" name="quantidade" class="form-control" value="{{ venda.quantidade }}" required>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Salvar alterações</button>
    </form>
{% endblock %}
